                    </button>
                    <a class="navbar-brand" href="/home">s t y l i s t i c</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li><a href="/browse">Browse</a></li>
                        <li><a href="/recommended">Recommended</a></li>
                        <li><a href="/login">Login</a></li>
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </div>
        <div class="title main-title">
            <div class="container browse">
                <h4>MAKE A PROFILE</h4>
            </div>
        </div>
        <div class="container makeprofile">
            <form id="make-profile-form" role="form" method="get" action="/browse">
                <div class="profile">
                    <div class="row profile-card">
                        <div class="col-xs-5">
                            <a href="#"><div class="photo">
                                <i class="glyphicon glyphicon-plus"></i>
                            </div>
                        </a>
                        </div>
                        <div class="col-xs-7">
                            <div class="info">
                                <div class="username">
                                    <h4>Bob Smith</h4>
                                    <h4>@user123</h4>
                                    <div class="tagline">
                                        <input type="text" onclick="if (this.value == 'Add a tagline here') {this.value='';}"
                                        onblur="if (this.value == '') {this.value='Add a tagline here';}" onkeypress=
                                        "if(event.keyCode==13) {event.preventDefault();}" class="tagline-text" value='Add a tagline here'>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="buttons">
                    <button type="submit" class="btn btn-default btn-md" id="skipBtn">Skip</button>
                    <button type="submit" class="btn btn-default btn-md" id="contBtn">Continue</button>
                </div>
            </div>
        </div>
    </html>


