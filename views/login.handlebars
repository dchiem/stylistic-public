<!doctype html>

<html>
    <head>
        <title>Stylistic</title>	
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <script src="js/jquery-1.11.0.js"></script>
        <script src="js/bootstrap.js"></script>
        <script src="js/login.js"></script>
        <link href="css/bootstrap.css" rel="stylesheet"></link>
        <link href="css/bootstrap-theme.css" rel="stylesheet"></link>
        <link href="css/stylistic.css" rel="stylesheet"></link>


        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
        <![endif]-->        
    </head>

    <body>
        <div class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <a class="back-button" href="#" onclick="history.back(); return false"><img src="images/backicon.png" height="23"></a>
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/home">s t y l i s t i c</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li><a href="/home">Home</a></li>
                        {{#if sessionUser}}
                            <li><a href="/myprofile">My Profile</a></li>
                            <li><a href="/logout">Logout</a></li>
                        {{else}}
                            <li><a href="/login">Login</a></li>
                        {{/if}}
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </div>
        <div class="container login">
            <div class="row">
                <div class="col-lg-4">
                    <form action="/login" role="form" method="post">
                        <input type="text" name="username" class="form-control" placeholder="Username"><br>
                        <input type="password" name="password" class="form-control" placeholder="Password">
                        {{#if errorMessage}}
                            <div class="errorMessage">
                                <h5>> {{errorMessage}}</h5>
                            </div>
                        {{else}}
                            <br>
                        {{/if}}
                        <!--
                        <div class="errorMessage">
                            <h5>> Invalid Username and Password</h5>
                        </div>
                        -->
                        <input type="submit" class="btn btn-default btn-md form-control" id="loginBtn" value="Log In">
                    </form>
                </div>
                <div class="col-lg-4 forgot">
                    <a href="/forgot">Forgot your password?</a><br>
                </div>
                <div class="col-lg-4 sign-up">
                    Don't have an account? <a href="/signup">Sign Up</a>
                </div>
            </div>
        </div>
    </html>
