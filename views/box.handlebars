<!doctype html>

<html>
    <head>
        <title>Stylistic</title>	
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <script src="js/jquery-1.11.0.js"></script>
        <script src="js/jquery-1.10.2.min.js"></script>
        <script src="js/lightbox-2.6.min.js"></script>
        <script src="js/bootstrap.js"></script>
        <script src="js/box.js"></script>
        <link href="css/bootstrap.css" rel="stylesheet"></link>
        <link href="css/bootstrap-theme.css" rel="stylesheet"></link>
        <link href="css/stylistic.css" rel="stylesheet"></link>
        <link href="css/lightbox.css" rel="stylesheet" />

        <!--<script>
            $(document).ready(function(){
                $("p").hide();
                $("h2 > img").click(function(){
                    $("p").toggle(200);
                });
            });
        </script>-->

        <style type="text/css">
            body {
                background-image:url('/images/InsideBox.png');
            }
        </style>


        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
        <![endif]-->        
    </head>

    <body>
        <div class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <a class="back-button" href="#" onclick="history.back(); return false"><img src="images/backicon.png" height="23"></a>
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/home">s t y l i s t i c</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li><a href="/browse">Browse</a></li>
                        <li><a href="/recommended">Recommended</a></li>
                        <li><a href="/login">Login</a></li>
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </div>

        <div class="transparent_box">
            <div class="box_title">
                <h2>{{thebox.box}}<img src="images/info-icon.png" height="30px"></h2>
                <p>Created by: <a href="profile">{{thebox.user}}</a><br>Tags: 
                {{#each thebox.tags}}
                    {{this}}
                {{/each}}
                </p>
            </div>
        </div>

        <div class="like">
            <img class="star" id="grey" src="images/greystar.png" height="30px">
            <img class="star" id="yellow" src="images/yellowstar.png" style="display:none" height="30px">
        </div>

        <div class="add">
            <img id="plus" src="images/plus.png" height="30px">
            <img id="plus" src="images/greenplus.png" style="display:none" height="30px">
        </div>

        <div class="dropdown">
            <div><p>Box1</p></div>
            <div><p>Box2</p></div>
            <div><p>Box3</p></div>
            <div><p>Box4</p></div>
        </div>

        <div class="container box_items">
            {{#each thebox.boxitems}}
                    <div class="col-xs-6">
                       <a href="{{imageURL}}"data-lightbox="clothes" title="{{name}}"><img src={{imageURL}} class="img-responsive"></a>
                    </div>
            {{/each}}

        </div>
    </body>

</html>
