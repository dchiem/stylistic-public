        <![endif]-->        
    </head>

    <body>
        <div class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <a class="back-button" href="#" onclick="history.back(); return false"><img src="images/backicon.png" height="23"></a>
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/home">s t y l i s t i c</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li><a href="/home">Home</a></li>
                        {{#if sessionUser}}
                            <li><a href="/myprofile">My Profile</a></li>
                            <li><a href="/logout">Logout</a></li>
                        {{else}}
                            <li><a href="/login">Login</a></li>
                        {{/if}}
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </div>
        <div class="title main-title">
            <div class="container list">
                <h4>{{tag}} BOXES</h4>
            </div>
        </div>
        <div class="container list">
            {{#each boxes}}
            <form name="tagForm" id="tagForm{{_id}}" role="form" method="get" action="/box">
                <div class="row" id="list_row" onClick="document.forms.tagForm{{_id}}.submit()">
                    <div class="col-xs-4">
                        <input type="hidden" value={{_id}} name="id"/>
                        <input type="image" src={{imageURL}} class="img-responsive"/>
                    </div>
                    <div class="col-xs-8">
                        <h5>{{box}}<span> by: {{user}}</span></h5>
                        <p>Tags: 
                        {{#each tags}}
                            {{this}}
                        {{/each}}
                        </p>
                    </div>
                </div>
            </form>
            {{/each}}
        </div>

