        <div class="transparent_box">
            <form class="enter-title">
                <textarea type="text" placeholder="<Enter title of box>" class="create-title" name="title" id="title"
                    rows="1" cols="20" style="border:none; resize:none; width:100%"></textarea>
            </form>
        </div>

        <div class="transparent_box">
            <form class="enter-title">
                <textarea type="text" placeholder="<Enter related tags> e.g., HIPSTER, WESTERN, ..."class="create-tags" name="tags" id="tags"
                     style="border:none; resize:none; width:100%"></textarea>
            </form>
        </div>

        <!--<div class="import">
            <input type="file" id="imageLoader" name="imageLoader"/>
            <canvas id="imageCanvas"></canvas>
        </div>-->

        <div class="import">
            <img id="import-item" src="images/icons/blueplus.png" width="100px">
        </div>

        <form class="import-form">
            <h4>Add an item to your box</h4>
            <input type="text" name="newItem" class="form-control" placeholder="Enter name of item"><br>
            <div class="dotted">
                <input type="file" id="imageLoader" name="imageLoader"/>
                <canvas id="imageCanvas" height="20px"></canvas>
            </div>
            <input type="submit" class="btn btn-default btn-md form-control" id="newItemBtn" value="Put in box">
        </form>

        <form class="add-box" method="get" action="/profile">
                <button type="submit" class="btn btn-default btn-md" id="confirmAddBtn">Add to your boxes</button>
        </form>

    </body>
