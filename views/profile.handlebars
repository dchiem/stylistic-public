        <div class="container makeprofile">
            <form id="make-profile-form" role="form" method="get" action="/browse">
                <div class="profile">
                    <div class="row profile-card">
                        <div class="col-xs-5">
                            <a href="/profile"><img src="{{user.imageURL}}" class="img-responsive"></a>
                        </a>
                        </div>
                        <div class="col-xs-7">
                            <div class="info">
                                <div class="username">
                                    <h4>{{user.name}}</h4>
                                    <div class="tagline">
                                        <textarea class="tagline-text-profile2" style="resize:none; width:100%">"{{user.motto}}"</textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class=row>
            <div class="col-xs-6 tile half-title" >
                <div class="container main-half-title">
                    <h4>YOUR BOXES</h4>
                </div>
            </div>
            <div class="col-xs-6 title half-title">
                <div class="container sub-half-title">
                    <h4>LIKED BOXES</h4>
                </div>
            </div>
        </div>
        <div class="container makeprofile">
            <!--
            {{#if myBoxes}}
            {{#each boxes}}
            -->
            <form name="tagForm" id="tagForm" role="form" method="get" action="/box">
                <div class="row" id="list_row" onClick="document.forms.tagForm.submit()">
                    <div class="col-xs-4">
                        <input type="hidden" value={{box}} name="boxname"/>
                        <input type="hidden" value={{user}} name="user"/>
                        <input type="hidden" value={{_id}} name="id"/>
                        <input type="image" src={{imageURL}} class="img-responsive"/>
                    </div>
                    <div class="col-xs-8">
                        <h5>{{box}}</h5>
                        <p>Created by: {{user}}</p>
                        <p>Tags: 
                        {{#each tags}}
                            {{this}}
                        {{/each}}
                        </p>
                    </div>
                </div>
            </form>
            <!--
            {{/each}}
            {{else}}
            {{#each likes}}
            -->
            <form name="tagForm" id="tagForm" role="form" method="get" action="/box">
