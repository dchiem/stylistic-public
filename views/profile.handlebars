<!doctype html>

<html class="makeprofile-body">
    <head>
        <title>Stylistic</title>	
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <script src="js/jquery-1.11.0.js"></script>
        <script src="js/bootstrap.js"></script>
        <script src="js/profile.js"></script>
        <link href="css/bootstrap.css" rel="stylesheet"></link>
        <link href="css/bootstrap-theme.css" rel="stylesheet"></link>
        <link href="css/stylistic.css" rel="stylesheet"></link>


        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
        <![endif]-->        
    </head>

    <body class="makeprofile-body">
        <div class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <a class="back-button" href="#" onclick="history.back(); return false"><img src="images/backicon.png" height="23"></a>
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/home">s t y l i s t i c</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li><a href="/home">Home</a></li>
                        <li><a href="/browse">Browse</a></li>
                        <li><a href="/recommended">Recommended</a></li>
                        <li><a href="/login">Login</a></li>
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </div>
        <div class="container profile-back">
            <div class="profile">
                <div class="row profile-card">
                    <div class="col-xs-5">
                        {{#if myProfile}}
                        <a href="/profile"><img src="{{user.imageURL}}" class="img-responsive"></a>
                        {{else}}
                        <img src="{{user.imageURL}}" class="img-responsive">
                        {{/if}}
                    </a>
                </div>
                <div class="col-xs-7">
                    <div class="info">
                        <div class="username">
                            <h4>{{user.name}}</h4>
                            <div class="tagline">
                                {{#if myProfile}}
                                <textarea class="tagline-text-profile2" style="resize:none; width:100%">"{{user.motto}}"</textarea>
                                {{else}}
                                <p>"{{user.motto}}</p>
                                {{/if}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class=row>
    <div class="col-xs-6 tile half-title boxes-title" >
        <div class="container main-half-title">
            {{#if myProfile}}
            <h4>YOUR BOXES</h4>
            {{else}}
            <h4>THEIR BOXES</h4>
            {{/if}}
        </div>
    </div>
    <div class="col-xs-6 title half-title liked-title">
        <div class="container sub-half-title">
            <h4>LIKED BOXES</h4>
        </div>
    </div>
</div>
<div class="container makeprofile">
    <div class="your-boxes">
        {{#each boxes}}
        <div class="row" id="list_row">
            <form name="tagForm" id="tagForm{{_id}}" role="form" method="get" action="/box">
                <div class="col-xs-3" onClick="document.forms.tagForm{{_id}}.submit()">
                    <input type="hidden" value={{box}} name="boxname"/>
                    <input type="hidden" value={{user}} name="user"/>
                    <input type="hidden" value={{_id}} name="id"/>
                    <input type="image" src={{imageURL}} class="img-responsive"/>
                </div>
                <div class="col-xs-7" onClick="document.forms.tagForm{{_id}}.submit()">
                    <h5>{{box}}</h5>
                    <p>Tags: 
                    {{#each tags}}
                    {{this}}
                    {{/each}}
                    </p>
                </div>
            </form>
            <div class="col-xs-2">
                {{#if myProfile}}
                <i class="glyphicon glyphicon-pencil"></i>
                {{/if}}
            </div>
        </div>
        {{/each}}
    </div>
    <div class="liked-boxes" style="display:none;">
        {{#each likes}}
        <form name="tagForm" id="tagForm" class="liked-boxes" role="form" method="get" action="/box">
            <div class="row" id="list_row" onClick="document.forms.tagForm.submit()">
                <div class="col-xs-4">
                    <input type="hidden" value={{box}} name="boxname"/>
                    <input type="hidden" value={{user}} name="user"/>
                    <input type="hidden" value={{_id}} name="id"/>
                    <input type="image" src={{imageURL}} class="img-responsive"/>
                </div>
                <div class="col-xs-8">
                    <h5>{{box}}</h5>
                    <p>Created by: {{user}}</p>
                    <p>Tags: 
                    {{#each tags}}
                    {{this}}
                    {{/each}}
                    </p>
                </div>
            </div>
        </form>
        {{/each}}
    </div>
</div>
</body>
</html>
